#!/bin/bash

# gcc-aarch64.bldconf - empty configuration file for PARSEC
# Package dependencies
build_deps="gsl imagick"

# Temporary variable with all flags
ferret_flags="CFLAGS=\"-I${PARSECDIR}/pkgs/libs/gsl/inst/${PARSECPLAT}/include -I${PARSECDIR}/pkgs/libs/imagick/inst/${PARSECPLAT}/include ${CFLAGS}\" LDFLAGS=\"-L${PARSECDIR}/pkgs/libs/gsl/inst/${PARSECPLAT}/lib -L${PARSECDIR}/pkgs/libs/imagick/inst/${PARSECPLAT}/lib ${LDFLAGS}\""

# Environment to use for configure script and Makefile
build_env="version=\"pthreads\" ${ferret_flags}"

# Whether the build system supports only in-place compilation.
# If TRUE, then all sources will be copied to the build directory before we
# start building the package. Required for older build systems which don't
# support VPATH.
build_inplace="TRUE"

# Arguments to pass to the configure script, if it exists
build_conf=""
